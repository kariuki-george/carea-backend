{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/carea/src",
  "monorepo": true,
  "root": "apps/carea",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/carea/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [
            ".input.ts",
            ".res.ts",
            ".entity.ts",
            ".dto.ts"
          ],
          "introspectComments": true
        }
      }
    ]
  },
  "projects": {
    "carea": {
      "type": "application",
      "root": "apps/carea",
      "entryFile": "main",
      "sourceRoot": "apps/carea/src",
      "compilerOptions": {
        "tsConfigPath": "apps/carea/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "emails": {
      "type": "application",
      "root": "apps/emails",
      "entryFile": "main",
      "sourceRoot": "apps/emails/src",
      "compilerOptions": {
        "tsConfigPath": "apps/emails/tsconfig.app.json",
        "watchAssets": true,
        "assets": [
          {
            "include": "../templates/**/*",
            "outDir": "dist/apps/emails/templates"
          }
        ]
      }
    },
    "orders": {
      "type": "application",
      "root": "apps/orders",
      "entryFile": "main",
      "sourceRoot": "apps/orders/src",
      "compilerOptions": {
        "tsConfigPath": "apps/orders/tsconfig.app.json"
      }
    }
  }
}
