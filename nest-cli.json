{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/carea-backend/src",
  "compilerOptions": {
    "webpack": true,
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [
            ".input.ts",
            ".res.ts",
            ".entity.ts",
            ".dto.ts"
          ],
          "introspectComments": true
        }
      }
    ],
    "watchAssets": true,
    "assets": [
      {
        "include": "/emails/templates/**/*",
        "outDir": "dist/src/"
      }
    ],
    "tsConfigPath": "apps/carea-backend/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/carea-backend",
  "projects": {
    "carea-backend": {
      "type": "application",
      "root": "apps/carea-backend",
      "entryFile": "main",
      "sourceRoot": "apps/carea-backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/carea-backend/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    }
  }
}